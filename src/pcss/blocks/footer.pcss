.footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;

  border-top: 1px solid #aaaaaa;
  padding: 40px 60px;

  &__image-wrapper {
    margin-bottom: 20px;
  }

  &__contacts-details {
    display: flex;
    flex-direction: column;
    row-gap: 8px;
  }

  &__socials {
    max-width: 400px;
    display: flex;
    flex-direction: column;
    row-gap: 10px;
    text-align: right;
  }
}