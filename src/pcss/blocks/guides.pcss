.guides {
  &__list {
    display: flex;
    justify-content: space-between;
  }
  &__list-item {
    width: 30%;
  }

  &__card-content {
    display: flex;
    flex-direction: column;
    row-gap: 30px;
  }

  &__capture {
    display: flex;
    flex-direction: column;
    row-gap: 10px;
  }

  &__name {
    @mixin h-font;
    font-size: 2rem;
    color: var(--secondary-color);
  }

  &__expertise {
    font-size: 1rem;
    font-weight: 600;
  }
}